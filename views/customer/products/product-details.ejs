<%- include('../../shared/includes/head',{pageTitle:product.title}) %>
    <link rel="stylesheet" type='text/css' href="/styles/product.css">
    <script src="/scripts/cart-management.js" defer></script>
    </head>

    <body>
        <%- include('../../shared/includes/header') %>
            <main id="product-details">
                <header>
                    <img src="<%= product.imageUrl  %>" alt="">
                    <div id="product-info">
                        <h1>
                            <%= product.title %>
                        </h1>
                        <p>
                            $ <%= product.price %>
                        </p>
                        <a href="/products" class="btn">Back</a>
                        <button class="btn" data-csrf="<%= locals.csrfToken %>" data-id="<%= product._id  %>">Add
                            to
                            Cart</button>
                    </div>
                </header>
                <p id="product-description">
                    <%= product.description %>
                </p>
            </main>

    </body>

    <%- include('../../shared/includes/footer') %>